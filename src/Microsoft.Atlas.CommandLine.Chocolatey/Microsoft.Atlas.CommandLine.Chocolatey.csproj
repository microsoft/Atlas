<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>atlas-cli</PackageId>
    <VersionPrefix>0.1</VersionPrefix>
    <VersionPrefix Condition=" '$(BUILD_BUILDID)' != '' ">$(VersionPrefix).$(BUILD_BUILDID)</VersionPrefix>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>tools</ContentTargetFolders>
      
      <Title>Atlas CLI</Title>
      <!--<Owners></Owners>-->
      <Authors>falconcore@microsoft.com</Authors>
      <PackageProjectUrl>https://github.com/Microsoft/Atlas</PackageProjectUrl>
      <PackageIconUrl>https://github.com/Microsoft/Atlas/raw/master/docs/icon-128.png</PackageIconUrl>
      <Copyright>Copyright 2018</Copyright>
      <Company>Microsoft</Company>
      <PackageLicenseUrl>https://github.com/Microsoft/Atlas/blob/master/LICENSE</PackageLicenseUrl>
      <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
      <!-- projectSourceUrl -->
      <!-- docsUrl -->
      <!-- mailingListUrl -->
      <!-- bugTrackerUrl -->
      <PackageTags>atlas cli admin azure activedirectory aad visualstudio vsts</PackageTags>
      
      <Description>Automated deployment and configuration of engineering systems</Description>
      <!--<ReleaseNotes>ReleaseNotes</ReleaseNotes>-->
      
      <RepositoryUrl>$(BUILD_REPOSITORY_URI)</RepositoryUrl>
      <RepositoryType>git</RepositoryType>
      <RepositoryBranch>$(BUILD_SOURCEBRANCHNAME)</RepositoryBranch>
      <RepositoryCommit>$(BUILD_SOURCEVERSION)</RepositoryCommit>
      <!--<NuspecProperties></NuspecProperties>-->
  </PropertyGroup>

  <ItemGroup>
    <None Remove="VERIFICATION.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\LICENSE" />
    <Content Include="..\..\ThirdPartyNotice.txt" />
    <Content Include="VERIFICATION.txt" />
  </ItemGroup>

  <ItemGroup>
    <PublishProjectReference Include="..\Microsoft.Atlas.CommandLine\Microsoft.Atlas.CommandLine.csproj" TargetFramework="netcoreapp2.0" RuntimeIdentifier="win10-x64" />
  </ItemGroup>

</Project>
